@page
@model Softuni_Fest.Pages.CatalogModel
@{
    ViewData["Title"] = "Catalog";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" style="font-size: 300%;">Product Catalog</h2>
            <hr style="width:350px"/>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary" style="margin-left:70%; margin-top: 2%">Create new product</a>
        </div>
    </div>

    <br /> <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th style="text-align: center;">Price</th>
                <th style="text-align: center;">Options</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach(var product in Model.Products)
                {
                    <td width="30%">
                        @product.ProductName
                    </td>
                    <td width="40%">
                        @product.ProductDescription
                    </td>
                    <td width="15%" style="text-align: center;">
                        @product.ProductPrice
                    </td>
                    <td width="20%" style="text-align: center;">
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>
