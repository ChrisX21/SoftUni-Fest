@page
@model Softuni_Fest.Pages.ProductModel

<form method="post" asp-route-productId="@Model.Product.Id">
    <div class="form-floating">
        <input asp-for="Input.Quantity" class="form-control" aria-required="true" value="1" />
        <label asp-for="Input.Quantity"></label>
        <span asp-validation-for="Input.Quantity" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary" style="width: 150px;">Buy</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
