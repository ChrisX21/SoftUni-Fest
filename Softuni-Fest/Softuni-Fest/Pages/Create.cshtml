@page
@model Softuni_Fest.Pages.CreateModel
@{

}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" style="width:600px; margin-left:30%">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3" style="font-size:250%">Create product</h2>
            <hr style="width: 600px"/>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ProductName" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.ProductName"></label>
            <span asp-validation-for="Input.ProductName" class="text-danger"></span>
        </div>
        <br />
        <div class="form-floating">
            <input asp-for="Input.ProductDescription" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.ProductDescription"></label>
            <span asp-validation-for="Input.ProductDescription" class="text-danger"></span>
        </div>
        <br />
        <br /><div class="form-floating">
            <input asp-for="Input.Price" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Price"></label>
            <span asp-validation-for="Input.Price" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width: 150px;">Create</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
