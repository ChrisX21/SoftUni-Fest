<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Softuni_Fest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Softuni_Fest.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Softuni_Fest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Catalog">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Orders">Orders</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-left" style="background-color: #171a26; color: rgb(213, 216, 222); padding-left: 30%; padding-right: 30%">
        <div class="container row" style="margin-top: 20px">
            <div class="col-sm-3">
                <img src="https://static.wixstatic.com/media/d38d68_1b004a4563734edc9dfe7ec81ef5dfa3~mv2.png/v1/fill/w_99,h_82,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/encorp_logo.png" style="width: 100px">
            </div>
            <div class="list-group col">
                <h3>Links</h3>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px; width: 10%" href="#">
                    Lorem ipsum dolor sit amet
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px;width: 10%" href="#">
                    consectetur adipiscing elit
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px; width: 10%" href="#">
                    eiusmod tempor incididunt ut
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px; width: 10%" href="#">
                    Duis aute irure dolor in reprehenderit in voluptate
                </a>
            </div>
            <div class="list-group col" style="margin-left: 20px">
                <h3>Contact Us</h3>
                <a style="color: #f9f9f9; font-size: 30px; width: 10%" href="https://www.facebook.com">
                    <i class="bi bi-facebook"></i>
                </a>
                <a style="color: #f9f9f9; font-size: 16px;width: 10%">
                    <i class="bi bi-phone-fill" style="font-size: 30px"></i> +(359)  _ _  _ _ _  _ _ _
                </a>
                <a style="color: #f9f9f9; font-size: 16px; width: 10%" href="mailto:lorem">
                    <i class="bi bi-envelope" style="font-size: 30px; width: 10% "></i> lorem@ispum.com
                </a>
                <a style="color: #f9f9f9; font-size: 16px; width: 10%">
                    <i class="bi bi-geo-alt-fill" style="font-size: 30px; width: 10%"></i> Sofia
                </a>
                </div>
            </div>
            
        <div class="text-center p-3">
            © 2023 Copyright: PaySec
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>