@using Softuni_Fest.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaySec Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Softuni_Fest.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div id="page-content">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PaySec Solutions</a>
                <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link bg-primary" asp-area="" asp-page="/Catalog">Catalog</a>
                        </li>
                        @if (User.IsInRole(Roles.Client))
                        {
                            <li class="nav-item">
                                <a class="nav-link bg-primary" asp-area="" asp-page="/Orders">Cart</a>
                            </li>
                        }
                    </ul>
                        <form class="d-flex">
                            <input class="form-control me-sm-2" type="search" placeholder="Search">
                            <button class="btn my-2 my-sm-0" style="margin-right:10%" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                        </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div id="content-wrap" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer id="footer" class="text-left" >
        <div class="container row" style="margin-top: 20px">
            <div class="col-sm-3" style="margin-right: 10%">
                    <img src="https://i.ibb.co/NNdC1tX/Logo.png" style="width: 200px">
            </div>
            <div class="list-group col">
                <h3>Links</h3>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px" href="#">
                    Lorem ipsum dolor sit amet
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px" href="#">
                    consectetur adipiscing elit
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px" href="#">
                    eiusmod tempor incididunt ut
                </a>
                <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" style="font-size: 16px" href="#">
                    Duis aute irure dolor in reprehenderit in voluptate
                </a>
            </div>
            <div class="list-group col" style="margin-left: 20%">
                <h3>Contact Us</h3>
                <a style="color: #f9f9f9; font-size: 30px" href="https://www.facebook.com">
                    <i class="bi bi-facebook"></i>
                </a>
                <a style="color: #f9f9f9; font-size: 16px">
                    <i class="bi bi-phone-fill" style="font-size: 30px"></i> +(359)  _ _  _ _ _  _ _ _
                </a>
                <a style="color: #f9f9f9; font-size: 16px" href="mailto:lorem">
                    <i class="bi bi-envelope" style="font-size: 30px"></i> lorem@ispum.com
                </a>
                <a style="color: #f9f9f9; font-size: 16px;">
                    <i class="bi bi-geo-alt-fill" style="font-size: 30px; width: 10%"></i> Sofia
                </a>
                </div>
            </div>
            
        <div class="text-center row" style="margin-left: 30%; margin-top: 20px">
            © 2023 Copyright: PaySec Solutions
        </div>
    </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>